	initializecryptogram//初始化mima
	otherghosttalkswitch = 1
	Firstbootday = day
	Firstbootmonth = month
	Firstbootyear = year
	fjswitch = 1
	shell.name = 'master'
	EVAL('first')
	mode = 0
	love = 0
	story = 0
	click = 0
}

