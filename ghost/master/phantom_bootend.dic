OnBoot
{
	GhostLastBoot		= CurrentTime
	CurrentTime		= GETSECCOUNT()
	lastTalk		 = '什麽都沒說。\e'
	_timeslot = GetTimeSlot
	lastboottime = "%(systemuptime)"
	table
	--
	if story == 3{
		'\0\s[61]\1\s[-1]'
	}
	elseif story == 2{
		'\0\s[1]\1\s[50]'
	}
	else{
		'\0\s[0]\1\s[50]'
	}
	--
	if CurrentTime - GhostLastBoot < 60{
		"\0\s[0]%(username)有漏掉什麽東西嗎？\e"
	}
	else{
		if story ==3{
			'\0【……】\n/
			【小斯巴达的玩偶静静地站在原地。】\n/
			【玩偶的身上似乎有淡淡的元力印记。】\n/
			【也许多敲击一下，就能加深印记，让他回来了。】'
		}
		elseif story == 2{
			"\0\s[9]……又见面了，%(username)。\n/
			\s[2]抱歉，我现在没什么心情……\n/
			\s[9]……不是%(username)的错。"
		}
		elseif story == 4{
			"\0\s[4]早啊，%(username)！\n/
			我刚刚就在想着你什么时候来呢！"

			"\0\s[4]%(username)，早上好！\n/
			你来了啊。\s[１]今天怎么这么早？真的有好好睡觉吗？"

			'\0早！\s[3]今天想聊点什么呢？'

			"\0天就要黑了啊。%(username)那边也是一样的吗？"

			"\0%(username)，\n/
			\s[3]今天辛苦了！"

			"\0\s[4]又见面了，%(username)！\n/
			今天过得怎么样？"
		}
		else{
			"\0又见面了，%(username)。"
		}
	}
}

