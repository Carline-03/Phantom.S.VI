//**** 時間處理 ***************************************************************************************************
OnMinuteChange
{

	//计算人格起动总时间/单位分
	elapsedtimetotal += 1

	smoketime = TOINT(systemuptime) - TOINT(lastboottime)
}

//----- OnSecondChange ---------------------
OnSecondChange
{
	if mode == '0'{
		if mikireflag == 1 && reference1 == 0{
			//見切終了
			EndMikireTalk
		}
		mikireflag = reference1
		if headpatflag == 1{
			if headpattime >= 30{
				headpatcount = 0
				headpatflag = 0
				headpattime = 0
			}
			else{
				headpattime++
			}
		}
		if bustpatflag == 1{
			if bustpattime >= 30{
				bustpatcount = 0
				bustpatflag = 0
				bustpattime = 0
			}
			else{
				bustpattime++
			}
		}
		if bustclickflag == 1{
			if bustclicktime >= 30{
				bustclickcount = 0
				bustclickflag = 0
				bustclicktime = 0
			}
			else{
				bustclicktime++
			}
		}
	}
}


