OnShellChanging
{
	lastshell.name = shell.name
	shell.name = reference0
	if lastshell.name == shell.name{
		'\0\s[0]重新載入服裝\e'
	}
	elseif shell.name == 'master'{
		'\0\s[0]換回master衣服\e'
	}
	else{
		'\0\s[0]新衣服？\w8\w8\w8\e'
	}
}

OnShellChanged
{
	if lastshell.name == shell.name{
		'\0\s[0]重載完成\e'
	}
	elseif shell.name == 'master'{
		'\0\s[0]換回了master\e'
	}
	else{
		'\0\s[17]谢、\w8谢谢！\w8\w8\w4我很…\w4…\w8\w8喜欢！\w8\w8\w4\e'
	}
}


